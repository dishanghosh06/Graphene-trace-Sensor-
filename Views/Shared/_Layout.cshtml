<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - ClinicianDashboard</title>

    <!-- ================= CSS ================= -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClinicianDashboard.styles.css" asp-append-version="true" />

    <!-- ================= LIBRARIES ================= -->
    <!-- Chart.js (used for pressure trend graph) -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>

    <!-- ================= NAVIGATION BAR ================= -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Application logo / home link -->
                <a class="navbar-brand"
                   asp-controller="Home"
                   asp-action="Index">
                    ClinicianDashboard
                </a>

                <!-- Mobile menu toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Display logged-in clinician name -->
                    @if (TempData["ClinicianName"] != null)
                    {
                        <span class="navbar-text fw-bold">
                            Dr. @TempData["ClinicianName"]
                        </span>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- ================= MAIN CONTENT ================= -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ClinicianDashboard -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- ================= JAVASCRIPT ================= -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
